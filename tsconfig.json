    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@io/*": ["io/*"]
    },
    "strict": true,
    "types": ["node"]
  },
  "include": ["src"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}

