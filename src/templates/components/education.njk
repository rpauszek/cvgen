<div class="education">
  <h1>Education</h1>

  {% for edu in education %}
    <div class="edu block">

      <div class="edu-header">
        <div class="edu-title">
          <div class="degree">{{ edu.degree }}</div>
          <div class="institution">{{ edu.institution }}</div>
        </div>

        <div class="edu-meta">
          <div class="dates">{{ edu.dates }}</div>
          {% if edu.location %}
            <div class="location">{{ edu.location }}</div>
          {% endif %}
        </div>
      </div>

    </div>
  {% endfor %}

</div>
